<%= form_for([@gazette, @article]) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Enter article</legend>
    <div class="field">
      <%= f.label :gazette_id, "Gazette" %><br />
      <%= render partial: 'gazettes/existing_gazettes', locals: { existing_gazette: @article.gazette } %>
    </div>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, size: 40 %>
    </div>
    <div class="field">
      <%= f.label :sub_title %><br />
      <%= f.text_field :sub_title, size: 40 %>
    </div>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>
