<%= form_for([@gazette, @article]) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Enter article</legend>
    <div class="actions">
      <%= f.submit %>
    </div>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, size: 120 %>
    </div>
    <div class="field">
      <%= f.label :sub_title %><br />
      <%= f.text_field :sub_title, size: 120 %>
    </div>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, size: "85x30" %>
    </div>
    <div class="field">
      <%= f.label :published_at %><br />
      <%= f.date_select :published_at %>
    </div>
    <div>
      <%= f.label :photos %><br />
      <ul class="select-photos-list">
      <% @all_photos.each do |photo| %>
        <li>
        <%= f.fields_for :article_photos, photo do |photo_form| %>
          <% is_photo_selected = @article.photos.any? { |existing_photo| existing_photo.id == photo.id } %>
          <%= photo_form.check_box :is_selected, { checked: is_photo_selected, class: "clickable-parent" } %>
          <%= label_tag "photo #{photo.id}" %>
          <%= image_tag (@photos_dir + photo.thumbnail_fichier.filename) %><br />
        <% end %>
        </li>
      <% end %>
    </div>
  </fieldset>
<% end %>
