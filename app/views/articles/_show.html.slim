/ Locals article

section class="post" id="article_#{article.to_param}"
  header class="post-header"
    h2 class="post-title"
      = link_to strip_tags(article.title), user_article_url(article.user, article)
    p class="post-meta"
      | by&nbsp;
      = link_to strip_tags(article.user.name), user_articles_url(article.user), class: "post-author"
      - if article.tags.size > 0
        | &nbsp;under&nbsp;
        - article.tags.each do |tag|
          = link_to tag.name, user_articles_path(article.user, tags: tag.name), class: "post-category"

    /small
    /  | &nbsp; #{article.published_at.strftime("%A, %B %-d, %Y")}

  div class="post-description"
    p
      / Do not escape html
      / We want to display the article's html tags
      == sanitize(article.content)
