<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Sub Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.sub_title %></td>
    <td><%= article.content %></td>
    <td><%= link_to 'Show', gazette_article_path(params[:gazette_id], article) %></td>
    <% if @is_logged_in %>
      <td><%= link_to 'Edit', edit_gazette_article_path(params[:gazette_id], article) %></td>
      <td><%= link_to 'Destroy', [article.gazette, article], data: { confirm: "Are you sure?" }, method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Article', new_gazette_article_path(params[:gazette_id]) %>
