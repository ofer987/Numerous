ol class="breadcrumb"
  li
    = link_to 'All Destinations', destinations_path
  li class="active" #{@country.name}

div class="jumbotron"
  h1 #{@country.name}
  p #{@country.description}

ul class="list-group"
  - unless @country.wikipedia_url.blank?
    li class="list-group-item"
      a href="#{@country.wikipedia_url}" Wikipedia Article

== render partial: 'locations/index', locals: { locations: @country.locations }

ul class="pager"
  - if @is_logged_in
    li
      = link_to 'Edit', edit_country_path(@country)
  li
    = link_to 'Back', destinations_path
