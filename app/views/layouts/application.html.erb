<!DOCTYPE html>
<html>
  <head>       
    <title>Dan Jakob Ofer</title>
    <%= stylesheet_link_tag    "application" %>
	<%# YUI (Yahoo User Interface) JavaScript %>
	<%# Used in *.js files, so load the library first %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-44599252-1', 'danofer.com');
        ga('send', 'pageview');
    </script>
  </head>
  <body>
    <header>
		<ul class="navigation" id="left">
			<li id="home-item">
				<h1><a href="/">Dan Jakob Ofer</a></h1>
			</li>
		</ul>
		<ul class="navigation" id="right">
			<% if @is_logged_in %>
			<li id="logout">
				<h1><%= link_to "Logout", logout_url %></h1>
			</li>
			<% else %>
			<li id="login">
				<h1><%= link_to "Login", login_url %></h1>
			</li>
			<% end %>
			<li id="cv-item">
				<h1><%= link_to "About", "/cv" %></h1>
			</li>
			<li id="books-item">
				<h1><%= link_to "Books", books_read_path %></h1>
			</li>
			<li id="photos-item">
				<h1><%= link_to "Photos", photos_path %></h1>
			</li>
			<li id="blogs-item">
				<h1><%= link_to "Blog", articles_path %></h1>
			</li>
		</ul>
    </header>
    <div class="page">
		<% if notice %>
			<p id="notice"><%= notice %></p>
		<% end %>
      
	  	<%= yield %>
    </div>
    <footer>
      <p>danofer.com, 2013</p>
    </footer>
  </body>
</html>
