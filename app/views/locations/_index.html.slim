// parameters locations
div id="locations"
  h3 Locations
  div class="row"
    - locations.each_with_index do |location, index|
      div class="col-md-12"
        div class="thumbnail"
          div [class="map-canvas" id="location-#{index}"
            latitude="#{location.latitude}"
            longitude="#{location.longitude}"
            zoom-level="#{location.zoom_level}"]
          div class="caption"
            h4 #{location.name}
            p #{location.full_address}
