<%= form_for(@photo) do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :existing_tags, "Existing Tags" %><br />
    <%= render partial: 'tags/existing_tags', locals: { parent_form: f, existing_tags: @photo.tags } %>
  </div>
  <div class="field">
    <%= f.label :new_tags, "New Tags" %><br />
    <%= text_field_tag :new_tags, params[:new_tags] %>
  </div>
	<div class="field">
		<%= f.label :load_photo_file %><br />
		<%= f.file_field :load_photo_file, accept: "image/jpeg" %>
	</div>
	<br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
