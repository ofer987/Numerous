ol class="breadcrumb"
  li class="text-danger"
    = link_to 'All Destinations', destinations_path
  li
    = link_to @place.city.country.name,
      country_path(@place.city.country)
  li
    = link_to @place.city.name, 
      country_city_path(@place.city.country, @place.city)
  li class="active" #{@place.name}

div class="jumbotron"
  h1 #{@place.name}
  h2 #{@place.place_type.name}
  p #{@place.description}

div class="list-group"
  a class="list-group-item active"
    | More Data
  - unless @place.wikipedia_url.blank?
    a class="list-group-item"
      | #{@place.wikipedia_url} Wikipedia Article
  - unless @place.home_url.blank?
    a class="list-group-item" href="#{@place.home_url}"
      | Home Page

== render partial: 'locations/index', locals: { locations: @place.locations }

ul class="pager"
  - if @is_logged_in
    li
      = link_to 'Edit', edit_country_city_place_path(@country, @city, @place)
  li
    = link_to 'Back', destinations_path
