ol class="breadcrumb"
  li
    = link_to @place.city.country.name,
      country_path(@place.city.country)
  li
    = link_to @place.city.name, 
      country_city_path(@place.city.country, @place.city)
  li class="active" #{@place.name}

div class="jumbotron"
  h1 #{@place.name}
  h2 #{@place.place_type.name}
  p #{@place.description}

div class="list-group"
  a class="list-group-item active"
    | More Data
  - unless @place.wikipedia_url.blank?
    a class="list-group-item"
      | #{@place.wikipedia_url} Wikipedia Article
  - unless @place.home_url.blank?
    a class="list-group-item" href="#{@place.home_url}"
      | Home Page

div id="locations"
  h3 Locations
  div class="row"
    - @place.locations.each_with_index do |location, index|
      div class="col-sm-1 col-md-8"
        div class="thumbnail"
          div [class="map-canvas" id="location-#{index}"
            latitude="#{location.latitude}"
            longitude="#{location.longitude}"]
          div class="caption"
            h4 #{location.name}
            p #{location.full_address}

ul class="pager"
  - if @is_logged_in
    li
      = link_to 'Edit', edit_country_city_place_path(@country, @city, @place)
  li
    = link_to 'Back', destinations_path
