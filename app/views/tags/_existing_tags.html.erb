<!-- selected_tags -->

<% Tag.all.each do |tag| %>
  <% is_checked = false %>
  <% if defined? selected_tags and selected_tags != nil
    selected_tags.each { |selected_tag| is_checked = true if selected_tag.id == tag.id }
  end %>
  <%= check_box_tag tag.to_name_id, tag.to_id, checked = is_checked %>
  <%= label_tag tag.to_name_id, tag.name %>
<% end %>